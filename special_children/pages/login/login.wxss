.wrapper {
  position: relative;
  z-index: 90;
  padding-bottom: 40rpx;
}

.left-top-sign {
  font-size: 120rpx;
  color: #f8f8f8;
  position: relative;
  left: -16rpx;
}

.welcome {
  position: relative;
  left: 50rpx;
  top: -90rpx;
  font-size: 46rpx;
  color: #555;
}

.input-content {
  padding: 0 60rpx;
}
.input-item {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  padding: 0 30rpx;
  background: #f8f6fc;
  position: relative;
  border-radius: 4px;
  margin-bottom: 30rpx;
}

.input-item:last-child {
  margin-bottom: 0;
}
.input-item .tit {
  height: 50rpx;
  line-height: 56rpx;
  font-size: 30rpx;
  color: #606266;
}
.input-item input {
  height: 60rpx;
  font-size: 30rpx;
  color: #303133;
  width: 100%;
}
.confirm-btn {
  width: 630rpx !important;
  height: 76rpx;
  line-height: 76rpx;
  border-radius: 50rpx;
  margin-top: 70rpx;
  background: #6077fa;
  color: #fff;
  font-size: 32rpx;
  padding: 0;
}
.confirm-btn2:after {
  border-radius: 100px;
}

.forget-section {
  font-size: 28rpx;
  color: #4399fc;
  text-align: center;
  margin-top: 40rpx;
}

.register-section {
  position: absolute;
  left: 0;
  bottom: 50rpx;
  width: 100%;
  font-size: 28rpx;
  color: #606266;
  text-align: center;
}
.register-section text {
  color: #4399fc;
  margin-left: 10rpx;
}
/* 下拉框 */

.top-selected {
  display: flex;
  width: 80%;
  align-items: center;
  border: 2rpx solid #ccc;
  padding: 6rpx 10rpx;
  font-size: 30rpx;
}
.top-selected text {
  flex: 1;
}
/* 下拉图标 */
.top-selected icon {
  position: relative;
  top: -4rpx;
  font-size: 30rpx;
  transform: rotate(90deg);
  color: black;
  margin-left: 6rpx;
}

/* 下拉内容 */

.select_box {
  position: absolute;
  top: 115rpx;
  background-color: #fff;
  padding: 0 20rpx;
  width: calc(80% - 40rpx);
  z-index: 3;
  overflow: hidden;
  text-align: left;
  animation: myfirst 0.2s;
  font-size: 30rpx;
  margin-top: 4rpx;
}

.select_one {
  padding-left: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-bottom: 1px solid #ccc;
}
.pwd_placeholder {
  font-size: 26rpx;
}

/* 下拉过度效果 */

@keyframes myfirst {
  from {
    height: 0rpx;
  }

  to {
    height: 210rpx;
  }
}
.active {
  background-color: #bfd6f1;
}
